<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSimuFlashFragment"
    android:background="@color/fundo">

    <!-- Texto "Simulados" -->
    <TextView
        android:id="@+id/textSimulados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulados"
        android:textColor="@color/palavras"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <!-- Imagem Simulados -->
    <ImageView
        android:id="@+id/imgSimulados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/simulados"
        app:layout_constraintTop_toBottomOf="@id/textSimulados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <!-- Texto "Flashcards" -->
    <TextView
        android:id="@+id/textFlashcards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flashcards"
        android:textColor="@color/palavras"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgSimulados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="25dp"/>

    <!-- Imagem Flashcards -->

    <!-- Navbar fixada embaixo -->
    <ImageView
        android:id="@+id/imgFlashcards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/flashcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFlashcards"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"/>

    <include
        android:id="@+id/navbar"
        layout="@layout/fragment_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
